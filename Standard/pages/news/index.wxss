/* pages/news/index.wxss */
.search{
  position: fixed;
  top:0;
}
.sort{
  width:96%;
  margin:55px 2% 5px 2%;
  height:35px;
  line-height: 35px;
  overflow-x: auto;
  overflow-y: hidden;
}
.sort .class{
  width:65px;
  float:left;
}
.sort .class .name{
  width:100%;
  font-size:14px;
}
.list{
  width:96%;
  margin:15px 2% 50px 2%;
}
.list .item{
  width:98%;
  margin:5px 1% 0 1%;
  font-size: 13px;
  padding-bottom: 4px;
  border-bottom:1px solid #e3e3e3;
}
.list .item .left{
  float:left;
  width:30%;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .item .left image{
  width:100%;
}
.list .item .right{
  float:right;
  width:65%;
  text-align: left;
}
.list .item .right .title{
  display:block;
  width:100%;
  height:40px;
  line-height: 20px;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .item .right .time{
  display:block;
  width:100%;
  text-align: right;
}