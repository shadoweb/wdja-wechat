/* pages/product/index.wxss */
.search{
  position: fixed;
  top:0;
}
.sort{
  width:96%;
  margin:55px 2% 5px 2%;
  height:35px;
  line-height: 35px;
  overflow-x: auto;
  overflow-y: hidden;
}
.sort .class{
  width:65px;
  float:left;
}
.sort .class .name{
  width:100%;
  font-size:14px;
}
.list{
  display: block;
  width:96%;
  margin:15px 2% 50px 2%;
}
.item{
  width:47%;
  margin-left:2%;
  float:left;
}
navigator {
height:auto;
width:auto;
display:block;
}
.item image{
  width:100%;
}
.item text{
  display: block;
  width:90%;
  padding:2px 5%;
  text-align: center;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
